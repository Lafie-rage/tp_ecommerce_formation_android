<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="120dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/add_to_cart_button"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/name"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Mens Cotton Jacket" />

    <TextView
        android:id="@+id/category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/name"
        app:layout_constraintTop_toBottomOf="@id/name"
        tools:text="Men's clothing" />

    <TextView
        android:id="@+id/price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/category"
        app:layout_constraintTop_toBottomOf="@+id/category"
        tools:text="59.99 â‚¬" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_to_cart_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/add_to_cart"
        app:icon="@drawable/ic_cart"
        app:layout_constraintEnd_toStartOf="@+id/favorite_button"
        app:layout_constraintStart_toStartOf="@id/price"
        app:layout_constraintTop_toBottomOf="@id/price" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/favorite_button"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_star_outlined"
        app:layout_constraintBottom_toBottomOf="@id/add_to_cart_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/add_to_cart_button" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_to_cart_button"
        tools:text="Great outerwear jackets for Spring/Autumn/Winter, suitable for many occasions, such as working, hiking, camping, mountain/rock climbing, cycling, traveling or other outdoors.\nGood gift choice for you or your family member.\nA warm hearted love to Father, husband or son in this thanksgiving or Christmas Day." />

    <ImageView
        android:id="@+id/rate_star_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_star_filled"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description" />

    <ImageView
        android:id="@+id/rate_star_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_star_filled"
        app:layout_constraintBottom_toBottomOf="@+id/rate_star_1"
        app:layout_constraintStart_toEndOf="@+id/rate_star_1"
        app:layout_constraintTop_toTopOf="@+id/rate_star_1" />

    <ImageView
        android:id="@+id/rate_star_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_star_half_filled"
        app:layout_constraintBottom_toBottomOf="@+id/rate_star_2"
        app:layout_constraintStart_toEndOf="@+id/rate_star_2"
        app:layout_constraintTop_toTopOf="@+id/rate_star_2" />

    <ImageView
        android:id="@+id/rate_star_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_star_outlined"
        app:layout_constraintBottom_toBottomOf="@+id/rate_star_3"
        app:layout_constraintStart_toEndOf="@+id/rate_star_3"
        app:layout_constraintTop_toTopOf="@+id/rate_star_3" />

    <ImageView
        android:id="@+id/rate_star_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_star_outlined"
        app:layout_constraintBottom_toBottomOf="@+id/rate_star_4"
        app:layout_constraintStart_toEndOf="@+id/rate_star_4"
        app:layout_constraintTop_toTopOf="@+id/rate_star_4" />

    <TextView
        android:id="@+id/rate_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rate_star_5"
        app:layout_constraintTop_toTopOf="@+id/rate_star_5"
        tools:text="2.7/5 sur 500 avis" />

</androidx.constraintlayout.widget.ConstraintLayout>

